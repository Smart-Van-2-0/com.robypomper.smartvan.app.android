<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.robypomper.josp.jsl.android.components.charts.ChartBarView" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/layTimeRangeMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp" >

            <com.robypomper.josp.jsl.android.components.charts.TimeSettingsView
                android:id="@+id/timeSettingsView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:src="@android:drawable/ic_menu_week" />

            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="2dp"
                android:src="@android:drawable/ic_menu_manage" />

        </LinearLayout>

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/chartComponents"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <com.robypomper.josp.jsl.android.components.charts.TimeNavigatorView
            android:id="@+id/timeNavigatorView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:navigator_text_appearance_txt="?attr/textAppearanceButton" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>