<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-sdk tools:overrideLibrary="app.futured.donut" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:name=".app.SVApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SmartVan.NoActionBar"
        tools:targetApi="31">

        <service
            android:name=".service.SVService"
            android:enabled="true" />

        <receiver
            android:name=".service.SVServiceAutoStart"
            android:exported="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <activity
            android:name=".activities.SVStartupActivity"
            android:exported="true"
            android:label="@string/activity_svstartup__title"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.SVSelectObjectActivity"
            android:exported="false"
            android:label="@string/activity_svmain__title"
            android:noHistory="true" />
        <activity
            android:name=".activities.SVMainActivity"
            android:exported="false"
            android:label="@string/activity_svmain__title" />
        <activity
            android:name=".activities.SVEnergyActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartVan"
            android:label="@string/activity_svenergy__title" />
        <activity
            android:name=".activities.SVServicesActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartVan"
            android:label="@string/activity_svservices__title" />
        <activity
            android:name=".activities.SVObjectDetailsActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartVan"
            android:label="@string/activity_svobject_details__title" />
        <activity
            android:name=".activities.SVObjectSpecsActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartVan"
            android:label="@string/activity_svobject_specs__title" />
        <activity
            android:name=".activities.SVSettingsActivity"
            android:exported="false"
            android:theme="@style/Theme.SmartVan"
            android:label="@string/activity_svsettings__title" />
    </application>

</manifest>