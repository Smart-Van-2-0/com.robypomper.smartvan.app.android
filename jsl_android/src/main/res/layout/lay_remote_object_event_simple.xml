<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/lay_remote_object_event_simple"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    android:background="?attr/selectableItemBackground">

    <TextView
        android:id="@+id/txtEventType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:maxLines="1"
        android:text="@string/adapter_remote_object_event_type_placeholder" />

    <TextView
        android:id="@+id/txtEventCount"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toEndOf="@+id/txtEventType"
        android:layout_toRightOf="@+id/txtEventType"
        android:layout_marginLeft="8dp"
        android:background="@drawable/circle_primary"
        android:gravity="center"
        android:shadowColor="@android:color/white"
        android:shadowRadius="10.0"
        android:textColor="?attr/colorOnPrimary"
        android:text="@string/adapter_remote_object_event_count_placeholder"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/txtEventTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_below="@id/txtEventType"
        android:paddingRight="16dp"
        android:textAppearance="?attr/textAppearanceCaption"
        android:textSize="12sp"
        android:maxLines="2"
        android:text="@string/adapter_remote_object_event_date_placeholder" />

</RelativeLayout>